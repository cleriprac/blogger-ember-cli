<div class="row">
  <div class="col-sm-12">
    <h1>Dracula's Blog</h1>
  </div>
</div>

<div class="row">
  <div class="col-sm-4">
    <ul class="list-unstyled">
      {{#each sortedPosts as |post|}}
        <li>
          {{#link-to 'post' post.id}}
            {{post.title}}
            ~ {{post.rating}} ~
            <span class="muted">
              by {{post.author.name}}
            </span>
          {{/link-to}}
        </li>
      {{/each}}
    </ul>
    <button {{action 'sortByRating'}}>Sort By Rating</button>
</div>
  <div class="col-sm-8">
    {{outlet}}
  </div>
</div>
